<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_100">

    <com.dresses.library.widget.LoadingProgress
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_30"
        android:minWidth="@dimen/qb_px_318"
        android:minHeight="@dimen/qb_px_28" />

    <com.dresses.library.widget.TypeFaceControlTextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qb_px_24"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/qb_px_8"
        android:gravity="center_horizontal"
        android:text="正在拼命加载中..."
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/qb_px_12"
        app:is_bold="true" />

    <ImageView
        android:id="@+id/imgInc"
        android:layout_width="@dimen/qb_px_64"
        android:layout_height="@dimen/qb_px_64" />
</FrameLayout>
